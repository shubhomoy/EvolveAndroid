<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evolve.evolve">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".EvolveActivities.EvolveUtilities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EvolveActivities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name=".EvolveActivities.RegistrationActivity"
            android:label="@string/title_activity_registration">
        </activity>
        <activity
            android:name=".EvolveActivities.PreviewActivity"
            android:label="@string/title_activity_preview" />
        <activity
            android:name=".EvolveActivities.ImagePreviewActivity"
            android:label="@string/title_activity_preview" />
        <activity android:name=".EvolveActivities.DoctorSearchActivity" />
        <activity android:name=".EvolveActivities.DoctorDetailsActivity"/>
        <activity android:name=".EvolveActivities.ClinicDetailsActivity"/>
        <activity android:name=".EvolveActivities.MakeAppointment"/>
    </application>

</manifest>
